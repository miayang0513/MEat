extends main

block body
  div(class="banner")
    div(class="gradient")
  div(class='container d-flex justify-content-center' style="margin-top: -320px")
    div(class='card col-8')
      div(class='card-body')
        h5(class='card-title') Add a restaurant
        form(action=`/restaurants/${restaurant.id}?_method=PUT` method="POST")
          div(class='form-row')
            div(class='form-group col-md-5')
              label(class='' for='name') 店名
              input(id='name' class='form-control' type='text' name='name' value=`${restaurant.name}`)
            div(class='form-group col-md-3')
              label(class='' for='category') 種類
              input(id='category' class='form-control' type='text' name='category' value=`${restaurant.category}`) 
            div(class='form-group col-md-4')
              label(class='' for='rating') 分數
              input(id='rating' class='custom-range' type='range' min="0" max="5" name='rating' value=`${restaurant.rating}`) 
          div(class='form-group')
            label(class='' for='image') 照片連結
            input(id='image' class='form-control' type='text' name='image' value=`${restaurant.image}`) 
          div(class='form-group')
            label(class='' for='location') 地址
            input(id='location' class='form-control' type='text' name='location' value=`${restaurant.location}`) 
          div(class='form-group')
            label(class='' for='phone') 電話
            input(id='phone' class='form-control' type='text' name='phone' value=`${restaurant.phone}`) 
          div(class='form-group')
            label(class='' for='google_map') google map
            input(id='google_map' class='form-control' type='text' name='google_map' value=`${restaurant.google_map}`) 
          div(class='form-group')
            label(class='' for='description') 評論
            input(id='description' class='form-control' type='text' name='description' value=`${restaurant.description}`) 
          div(class='form-group row justify-content-end')
            button(class='btn btn-primary mr-2' type='submit') Edit
            a(class='btn btn-primary mr-3' href='/') Cancel
