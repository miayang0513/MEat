extends main

block header 

block body
  div(class="login_banner d-flex align-items-center")
    div(class="overlay position-absolute w-100 h-100")
    div(class="col-md-3 m-auto")
      div(class="card card-body")
        h1(class="text-center mb-3") Login
        form(action="/user/login" method="POST")
          div(class="form-group")
            label(for="account") Username or email address
            input(type="text" id="account" name="account" placeholder="username or email" class="form-control")
          div(class="form-group")
            label(for="password") Password
            input(type="password" id="password" name="password" placeholder="password" class="form-control")
          button(type="submit" class="btn btn-primary btn-block") Login
          a(href="/auth/facebook" class="btn btn-info btn-block") Facebook Login
        p(class="lead mt-4")
          | No Account? 
          a(href="/user/register") Register