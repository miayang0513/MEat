extends main

block header 

block body
  div(class="login_banner d-flex align-items-center")
    div(class="overlay position-absolute w-100 h-100")
    div(class="col-md-3 m-auto")
      div(class="card card-body")
        h1(class="text-center mb-3") Register
        form(action="" method="POST" class="needs-validation" novalidate)
          div(class="form-group")
            label(for="username") Username
            input(type="text" id="username" name="username" class="form-control" placeholder="Enter Username" value=`${user.username}` required)
            div(class="invalid-feedback") Username is required
          div(class="form-group")
            label(for="email") Email
            input(type="email" id="email" name="email" class="form-control" placeholder="Enter Email" value=`${user.email}` required)
            div(class="invalid-feedback") Please enter a valid email address
          div(class="form-group")
            label(for="password") Password
            input(type="password" id="password" name="password" class="form-control" placeholder="Create Password" value=`${user.password}` required)
            div(class="invalid-feedback") Password is required
          div(class="form-group")
            label(for="password2") Confirm Password
            input(type="password" id="password2" name="password2" class="form-control" placeholder="Confirm Password" value=`${user.password2}` required)
            div(class="invalid-feedback") Password comfirm is requried
          button(type="submit" class="btn btn-primary btn-block") Register
        p(class="lead mt-4")
          | Have a Account? 
          a(href="/user/login") Login
append script
  script(src="/javascript/registerValidate.js")