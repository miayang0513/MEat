extends main.pug

block body
  div(class="banner" style={"background-image": `url(${restaurant.image})`})
    div(class="gradient")
  div(class="d-flex mt-5")
    div(class='col-8')
      div(class='d-flex mx-auto')
        div(class="col-5")
          img(class="rounded mx-auto d-block mb-4 w-100" src=`${restaurant.image}` alt=`${restaurant.name}` style="max-width: 600px;")
        div(class="col-7")
          h2(class="mb-1 restaurant-show-title") #{restaurant.name}
          p(class="mb-2")
            span(class="badge badge-pill badge-danger font-weight-normal")
              | #{restaurant.rating} 
              i(class="fas fa-star fa-xs")
            a(class="px-2" href="#comment") 7則評論
          p(class="mb-2")
            span(class="text-secondary")
              i(class="fas fa-utensils pr-2") 類別：
            | #{restaurant.category}
          p(class="mb-2")
            span(class="text-secondary")
              i(class="fas fa-map-marker-alt pr-2") 地址：
            | #{restaurant.region+restaurant.location}
            a(href=`${restaurant.google_map}` class="text-secondary" target="_blank")
              i(class="fas fa-location-arrow pr-2 fa-xs")
          p(class="mb-2")
            span(class="text-secondary")
              i(class="fas fa-utensils pr-2") 電話：
            | #{restaurant.phone}
          p(class="mb-5") #{restaurant.description}
      div(id="comment")
    div(class="col-4")
      h4(class="col-6") 推薦餐廳
      each restaurant in recommend
        div(class="d-flex w-100 my-3")
          div(class="col-6")
            img(class="card-img-top" src=`${restaurant.image}` alt=`${restaurant.name}`)
          div(class="col-6 py-3")
            h4(class="mb-2") 
              a(class="text-body" href=`/restaurants/${restaurant.id}`) #{restaurant.name}
            div(class="mb-2")
              span(class="badge badge-pill badge-danger font-weight-normal")
                | #{restaurant.rating} 
                i(class="fas fa-star fa-xs")
              a(class="px-2" href=`/restaurants/${restaurant.id}#comment`) 7則評論
            p(class="mb-2")
              span(class="text-secondary")
                i(class="fas fa-utensils pr-2") 類別：
              | #{restaurant.category}
            p(class="mb-2")
              span(class="text-secondary")
                i(class="fas fa-utensils pr-2") 電話：
              | #{restaurant.phone}